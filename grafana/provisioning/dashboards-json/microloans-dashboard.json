      "targets": [
        {
          "expr": "sum by (status) (rate(flask_http_request_total[5m]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "title": "Status code breakdown (5m rate)",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 4, "w": 5, "x": 0, "y": 34 },
      "id": 11,
      "targets": [
        {
