          "refId": "A"
        },
        {
          "expr": "sum(rate(flask_http_request_total{endpoint=\"health.health_check\"}[5m]))",
          "legendFormat": "health checks rate",
          "refId": "B"
        }
      ],
      "title": "Health check (total & rate)",
