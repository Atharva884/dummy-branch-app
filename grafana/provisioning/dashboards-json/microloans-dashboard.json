        "orientation": "auto",
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(increase(loans_created_total[1h]))",
          "legendFormat": "loans created (1h)",
          "refId": "A"
        }
      ],
      "title": "Total loans created (last 1h)",
      "type": "stat"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "id": 2,
      "options": {
        "legend": { "showLegend": true },
        "tooltip": { "mode": "single" }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "sum(rate(loans_created_total[5m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Loans per second (rate, 5m)",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "id": 9,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": ["lastNotNull"]
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "Prometheus" },
          "expr": "process_cpu_seconds_total",
          "legendFormat": "process cpu seconds",
          "refId": "A"
        }
      ],
      "title": "Process CPU seconds",
      "type": "stat"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 18, "y": 0 },
      "id": 4,
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "expr": "sum(rate(flask_http_request_total{status=~\"5..\"}[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "title": "Errors per endpoint (5xx rate)",
      "type": "stat"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 10, "w": 22, "x": 0, "y": 4 },
      "id": 5,
      "options": {},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(flask_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "p50 {{endpoint}}",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "p95 {{endpoint}}",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(flask_http_request_duration_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "p99 {{endpoint}}",
          "refId": "C"
        }
      ],
      "title": "Latency (P50 / P95 / P99) by endpoint (5m)",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 8, "w": 22, "x": 0, "y": 14 },
      "id": 3,
      "targets": [
        {
          "expr": "sum by (endpoint, status) (rate(flask_http_request_total[5m]))",
          "legendFormat": "{{endpoint}} {{status}}",
          "refId": "A"
        }
      ],
      "title": "HTTP requests by endpoint & status (rate 5m)",
      "type": "timeseries"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 22 },
      "id": 6,
      "targets": [
        {
          "expr": "topk(10, histogram_quantile(0.95, sum(rate(flask_http_request_duration_seconds_bucket[5m])) by (le, endpoint)))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "title": "Top 10 slow endpoints (P95, 5m)",
      "type": "table"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 6, "w": 5, "x": 12, "y": 22 },
