      "targets": [
        {
          "expr": "process_resident_memory_bytes / process_virtual_memory_bytes * 100",
          "legendFormat": "RSS %",
          "refId": "A"
        }
      ],
      "title": "Memory usage %",
      "type": "stat"
    },

    {
      "datasource": { "type": "prometheus", "uid": "Prometheus" },
      "gridPos": { "h": 6, "w": 5, "x": 17, "y": 22 },
      "id": 7,
      "targets": [
        {
          "expr": "sum(flask_http_request_total{endpoint=\"health.health_check\"})",
